<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.example.katherine.directoriomedico.addeditpaciente.AddEditPacienteFragment">


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/til_nombre"
        android:layout_marginTop="@dimen/activity_vertical_margin">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_nombre"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/til_apellido"
        android:layout_marginTop="@dimen/activity_vertical_margin">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_apellido"
            android:hint="Apellido"
            android:inputType="text"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/til_edad"
        android:layout_marginTop="@dimen/activity_vertical_margin">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_edad"
            android:hint="Edad"
            android:inputType="number"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/til_sexo"
        android:layout_marginTop="@dimen/activity_vertical_margin">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_sexo"
            android:hint="Sexo"
            android:inputType="text"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/til_enfermedad"
        android:layout_marginTop="@dimen/activity_vertical_margin">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_enfemedad"
            android:hint="Enfermedad"
            android:inputType="text"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
    </android.support.design.widget.TextInputLayout>

</LinearLayout>
